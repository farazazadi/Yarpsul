{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "products": {
        "ClusterId": "catalogCluster",
        "Match": {
          "Path": "/products/{**remainder}"
        }
      },
      "orders": {
        "ClusterId": "orderingCluster",
        "Match": {
          "Path": "/orders/{**reminder}"  
        } 
      } 
    },
    "Clusters": {
      "catalogCluster": {
        "Destinations": {
          "catalogApi": {
            "Address": "http://localhost:5011/api"
          }
        }
      },
      "orderingCluster": {
        "Destinations": {
          "orderingApi": {
            "Address": "http://localhost:5021/api"
          }
        }
      }
    }
  }
}
