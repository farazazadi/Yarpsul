{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "products": {
        "ClusterId": "catalogCluster",
        "Match": {
          "Path": "/products/{**remainder}"
        }
      },
      "orders": {
        "ClusterId": "orderingCluster",
        "Match": {
          "Path": "/orders/{**reminder}"
        }
      }
    },
    "Clusters": {
      "catalogCluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "catalogApi": {
            "Address": "http://[Catalog Service]/api"
          }
        }
      },
      "orderingCluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "orderingApi": {
            "Address": "http://[Ordering Service]/api"
          }
        }
      }
    }
  },
  "ServiceDiscovery": {
    "PeriodicUpdateIntervalInSeconds": 5
  } 
}
